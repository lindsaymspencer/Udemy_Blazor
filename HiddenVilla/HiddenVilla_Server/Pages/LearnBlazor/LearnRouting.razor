@page "/learnRouting"
@page "/learnRouting/{parameter1}"
@page "/learnRouting/{parameter1}/{parameter2}"
@page "/newRouting"

<h3>Learn Routing</h3>
@if (!string.IsNullOrEmpty(Parameter1))
{
    <p>Parameter 1: @Parameter1</p>
}
@if (!string.IsNullOrEmpty(Parameter2))
{
    <p>Parameter 2: @Parameter2</p>
}


<NavLink class="nav-link" href="learnAdvancedRouting?Param1=Blazzing&Param2=Blazor">
    <span class="oi oi-rain" aria-hidden="true"></span> Routing with Query Parameters
</NavLink>

@code {

    [Parameter]
    public string Parameter1 { get; set; }

    [Parameter]
    public string Parameter2 { get; set; }

}